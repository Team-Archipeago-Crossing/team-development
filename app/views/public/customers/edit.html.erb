<% content_for :title, "会員情報編集" %>
<div class="container mt-3">
  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <h3 class="bg-light border px-3 mb-3 d-inline-block">会員情報編集</h3>
  <div class="text-danger">
    <%= flash[:alret] %>
  </div>
  <div class='row'>
    <table class="table table-borderless">
      <tr>
        <td>氏名</td>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address ,size: "60" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
      </tr>
    </table>
  </div>
  <div class='row text-center pb-5'>
    <div class='col-6'>
      <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
    </div>
    <div class='col-1'>
      <%= link_to '退会する',customers_disable_confirm_path, class: 'btn btn-danger text-nowrap' %>
    </div>
  </div>
  <% end %>
</div>
