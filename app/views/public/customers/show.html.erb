<% content_for :title, "マイページ" %>
<div class='container mt-3'>
  <div class='row'>
    <div class='col-7'>
      <h2 class="bg-light border px-3 mb-3 d-inline-block">マイページ</h2>
      <div class="text-success">
        <%= flash[:notice] %>
      </div>
      <div class = "col-4">
        <table class="table table-borderless align-middle text-nowrap">
          <tr>
            <td><h3 class="m-0">登録情報</h3></td>
            <td><%= link_to '編集する', customers_information_edit_path, class:"btn btn-success btn-block" %></td>
          </tr>
        </table>
      </div>
      <table class="table table-bordered">
          <colgroup>
            <col class="bg-light">
            <col>
          </colgroup>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>
          <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class = "col-4">
        <table class="table table-borderless align-middle">
          <tr>
            <td>配送先</td>
            <td><%= link_to '一覧をみる', addresses_path , class:"btn btn-primary btn-block" %></td>
          </tr>
          <tr>
            <td> 注文履歴</td>
            <td><%= link_to '一覧をみる', orders_path , class:"btn btn-primary btn-block" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>