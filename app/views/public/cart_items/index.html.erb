<% content_for :title, "ショッピングカート" %>
<div class='container mt-3'>
  <div class='row'>
    <div class='col-10'>
      <h2 class="bg-light border px-3 mb-3 d-inline-block">ショッピングカート</h2>
      <div class="text-success success_message" style="visibility: hidden;">
        <h5><%= flash[:notice] %></h5>
      </div>
    </div>
    <% if @cart_items.present? %>
      <div class='col-2 destroy_all'>
        <%= link_to 'カートを空にする', destroy_all_cart_items_path, class: "btn btn-danger text-nowrap", method: :delete, remote: true %>
      </div>
      <div class="items_list">
        <table class="table table-bordered table-condensed align-middle text-nowrap">
          <thead class="table-light text-center">
            <tr>
              <th colspan="2">商品名</th>
              <th>単価 (税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @cart_items.each do |cart_item| %>
            <tr class="cart_item_<%= cart_item.item.id %>">
              <%= render "change_amount_form", cart_item: cart_item %>
            </tr>
          <% end %>
        </table>
        <div class="row">
          <div class="col-8">
            <%= link_to '買い物を続ける',root_path, class: "btn btn-primary" %>
          </div>
          <div class="col-4">
            <table class="table table-bordered ">
              <tr>
                <td>合計金額</td>
                <td class="total_payment text-end"><%= price(@subtotal) %></td>
              </tr>
            </table>
          </div>
          <div class='row'>
            <div class="col-3 mx-auto pb-3">
              <%= link_to '情報入力に進む', new_order_path, class: "btn btn-success btn-lg" %>
            </div>
          </div>
        </div>        
      </div>
    <% else %>
      <div class='container'>
        <%= render "no_items" %>
      </div>
    <% end %>
  </div>
</div>

