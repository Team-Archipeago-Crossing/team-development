<div class='container mt-3'>
  <div class='row'>
    <div class='col-md-5 '>
      <h2>ジャンル一覧・追加</h2>
      <div class="text-success">
        <%= flash[:notice] %>
      </div>
      <div class="text-danger">
        <%= render"layouts/errors", obj: @genre %>
      </div>
      <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
      <table class="table table-sm table-borderless">
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録",class: 'btn btn-success' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-4'>
      <table class="table table-hover table-inverse ">
        <thead class="table-light">
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id),class: 'btn btn-success' %></td>
          </tr>
          <% end %>
        </table>