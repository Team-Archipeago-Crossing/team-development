<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-7">
      <div class="my-4">
        <h4 class="col-3 bg-light text-center">管理者ログイン</h4>
        <div class="text-danger">
          <% flash.each do |message_type, message| %>
            <%= content_tag :div, message, class: message_type %>
          <% end %>
        </div>
      </div>
      <div class="mx-5 my-3">
        <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
          <%= render 'layouts/errors', obj: @admin %>
          <table class="table table-borderless">
            <tr class="field">
              <th class="w-25"><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: 'form-control w-100' %></td>
            </tr>
            <tr class="field">
              <th><%= f.label :password, "パスワード" %></th>
              <td><%= f.password_field :password, autocomplete: "current-password", class: 'form-control w-100' %></td>
            </tr>
          </table>
          <div class="actions m-4 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <%= render "admin/shared/links" %>
     </div>
  </div>
</div>

