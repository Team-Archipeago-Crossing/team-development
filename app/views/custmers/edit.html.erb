<div class="container">
  <div class="mb-5 mt-5">
    <h3>会員情報編集</h3>
  </div>
  <%= form_with model: @custmer, url: custmers_path(@custmer.id), method: :patch do |f| %>
  <table class="table table-sm table-borderless">
    <tr>
    <td>氏名</td>
    <td>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </td>
    </tr>
    <tr>
    <td>フリガナ</td>
    <td>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>
    </table>
  <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
  <%= link_to '退会する',custmers_disable_confirm_path, class: 'btn btn-danger' %>
  <% end %>
</div>